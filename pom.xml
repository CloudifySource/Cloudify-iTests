				</dependency>
				<dependency>
					<groupId>com.gigaspaces</groupId>
					<artifactId>gs-runtime</artifactId>
					<version>${gsVersion}</version>
					<scope>system</scope>
					<systemPath>${cloudify.home}/lib/required/gs-runtime.jar</systemPath>
				</dependency>
				<dependency>
